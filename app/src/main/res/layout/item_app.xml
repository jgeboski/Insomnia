<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <ImageView
        android:contentDescription="@string/icon"
        android:id="@+id/item_app_icon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_height="48dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="48dp" />

    <TextView
        android:ellipsize="end"
        android:id="@+id/item_app_label"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/item_app_icon"
        android:layout_toLeftOf="@+id/item_app_status"
        android:layout_toRightOf="@+id/item_app_icon"
        android:layout_toStartOf="@+id/item_app_status"
        android:layout_width="wrap_content"
        android:maxLines="1"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:ellipsize="end"
        android:id="@+id/item_app_name"
        android:layout_below="@+id/item_app_label"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/item_app_icon"
        android:layout_toLeftOf="@+id/item_app_status"
        android:layout_toRightOf="@+id/item_app_icon"
        android:layout_toStartOf="@+id/item_app_status"
        android:layout_width="wrap_content"
        android:maxLines="1"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:contentDescription="@string/status"
        android:id="@+id/item_app_status"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/item_app_label"
        android:layout_gravity="end"
        android:layout_height="24dp"
        android:layout_marginTop="10dp"
        android:layout_width="24dp"
        android:src="@drawable/disabled"
        android:textAppearance="?android:attr/textAppearanceLarge" />
</RelativeLayout>